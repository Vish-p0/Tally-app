<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom style for radio buttons with primary color -->
    <style name="PrimaryRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorControlNormal">@color/primary</item>
        <item name="android:colorControlActivated">@color/primary</item>
    </style>

    <!-- Date Picker Style with Light Green Background -->
    <style name="LightGreenDatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/light_green</item>
        <item name="android:colorBackground">@color/light_green</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="LightGreenAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/light_green</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ModernSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/light_green</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialCalendarHeaderToggleButton">@color/primary</item>
        <item name="colorSurface">@color/background</item>
        <item name="materialCalendarHeaderTitle">@style/MaterialCalendarHeaderTitle</item>
        <item name="materialCalendarHeaderSelection">@style/MaterialCalendarHeaderSelection</item>
        <item name="materialCalendarDay">@style/MaterialCalendarDay</item>
    </style>

    <style name="MaterialCalendarHeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="MaterialCalendarHeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <style name="MaterialCalendarDay" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="itemTextColor">@color/primary</item>
    </style>

    <!-- Style for PIN keypad buttons -->
    <style name="PinKeypadButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/pin_button_background</item>
        <item name="rippleColor">@color/ripple_light</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/light_gray</item>
    </style>
</resources>