<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (track) - All red for exceeded state -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/primary" />
        </shape>
    </item>

    <!-- Progress (how much expenses exceeded) - Darker red -->
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <solid android:color="@color/lime_green" />
                <stroke android:width="1dp" android:color="#FFFFFF" android:dashWidth="2dp" android:dashGap="2dp"/>
            </shape>
        </scale>
    </item>
</layer-list> 